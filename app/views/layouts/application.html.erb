<!DOCTYPE html>
<html>
  <%= render "shared/head" %>
  <body class="<%= @body_class %> min-h-screen flex w-full antialiased text-neutral-600 bg-neutral-50">
    <aside id="sidebar">
      <%= render "shared/sidebar" %>
    </aside>
    <section id="page" class="pb-32">
      <%= render "shared/navbar" %>
      <main>
        <%= render "shared/flash_messages" if flash.any? %>
