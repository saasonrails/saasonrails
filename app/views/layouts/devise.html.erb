<!DOCTYPE html>
<html>
  <%= render "shared/head" %>
  <body class="min-h-screen relative grid grid-cols-2 antialiased text-neutral-700 bg-neutral-50">
    <section class="bg-neutral-100"></section>
    <section class="flex flex-1 flex-col">
      <div class="flex-1 flex items-center justify-center">
        <section class="flex flex-col gap-8 items-center justify-center w-full max-w-lg">
          <header class="flex flex-col items-center">
            <div class="flex flex-col gap-y-2 text-center">
              <%= yield :header %>
            </div>
          </header>

          <% if alert %>
            <div class="bg-white py-3 px-6 inline-block text-center w-full rounded shadow text-sm font-headings text-rose-500">
              <%= alert %>
            </div>
          <% end %>

          <main class="w-full px-4">
            <div class="flex flex-col gap-4">
              <%= render "devise/shared/social_auth_buttons" if devise_controller? %>
              <%= yield %>
            </div>
          </main>
        </section>
      </div>
    </section>

  </body>
</html>
