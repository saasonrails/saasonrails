<% content_for :header do %>
  <h1 class="font-bold font-headings text-neutral-600 text-2xl">Sign in to <strong class="text-primary-700">FOOBAR</strong></h1>
  <p class="text-neutral-400">Sign in with your email address and password or select any of the other available options below.</p>
<% end %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: "Enter your email",
                input_html: { autocomplete: "email" },
                wrapper_html: { class: "box" } %>
    <%= f.input :password,
                required: false,
                placeholder: "Enter your password",
                input_html: { autocomplete: "current-password" },
                wrapper_html: { class: "box" } %>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mt-8 flex items-center justify-between gap-4">
    <div class="buttons-group items-center">
      <%= f.button :submit, "Sign in", class: "button primary xl" %>
    </div>
    <div>
      <p class="text-sm">Don't have an account? <%= link_to "Sign up!", new_user_registration_path, class: "font-bold hover:text-primary-700 transition" %></p>
    </div>
  </div>
<% end %>