<% content_for :header do %>
  <h1 class="font-bold font-headings text-neutral-600 text-2xl">Create your <strong class="text-primary-700">FOOBAR</strong> account</h1>
  <p class="text-neutral-400">Kindly enter your email address and select a password.</p>
<% end %>
    
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: "Enter your email",
                input_html: { autocomplete: "email" },
                wrapper_html: { class: "box" } %>

    <div class="flex gap-4">
      <%= f.input :password,
                required: true,
                label: "Password",
                placeholder: "Enter a password",
                input_html: { autocomplete: "new-password" },
                wrapper_html: { class: "box w-1/2" } %>

      <%= f.input :password_confirmation,
                required: true,
                label: "Confirm password",
                placeholder: "Confirm your password",
                input_html: { autocomplete: "new-password" },
                wrapper_html: { class: "box w-1/2 border-l" } %>
    </div>
  </div>

  <div class="form-actions mt-8 flex items-center justify-between gap-4">
    <div class="buttons-group items-center">
      <%= f.button :submit, "Create account", class: "button primary xl" %>
    </div>
    <div>
      <p class="text-sm">Already have an account? <%= link_to "Sign in!", new_user_session_path, class: "font-bold hover:text-primary-700 transition" %></p>
    </div>
  </div>
<% end %>